{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",
    "lib": ["es2020"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "compilerOptions": {
      "module": "NodeNext"
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}